// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String @id @default(uuid())
  firstName   String
  lastName    String
  phone       String
  cpf         String
  dateOfBirth String
  gender      String
  role        String
  status      String
  email       String @unique
  password    String

  @@map("users")
}
